<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER MERAH -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#D32F2F"
            android:padding="24dp"
            android:gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="78dp"
                android:layout_height="79dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo2"
                app:shapeAppearanceOverlay="@style/CircleImageView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BIODATA"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XI PPLG 4"
                android:textSize="14sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- JUDUL -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biodata Lengkap Siswa XI PPLG 4"
            android:textSize="14sp"
            android:textColor="#666666"
            android:padding="16dp" />

        <View
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle_background" />

        <!-- FOTO PROFIL BESAR (BULAT HITAM) -->
        <View
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle_background" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgDetailFoto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            app:shapeAppearanceOverlay="@style/CircleImageView" />

        <!-- CARD INFO SISWA -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:backgroundTint="#EEEEEE">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- NAMA SISWA -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Siswa"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvDetailNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="16dp" />

                <!-- ABSEN -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Absen"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvDetailAbsen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="16dp" />

                <!-- NIS -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NIS"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvDetailNis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="16dp" />

                <!-- GENDER -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvDetailGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp" />

                <!-- HOBI (Optional, bisa di-hide kalau kosong) -->
                <View
                    android:id="@+id/dividerHobi"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/labelHobi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hobi"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginBottom="4dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvDetailHobi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:visibility="gone" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- FOOTER MERAH -->
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#D32F2F"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>